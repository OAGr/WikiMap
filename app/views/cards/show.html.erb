<div class="container">
	<ul class="breadcrumb">
		<div class="row show-grid" >
		    <div class="span15  parent-list">	
			<%= parent_card_list(@card)%>
			<li class="active"> <%= truncate( @card.name, :length => 50, :separator => ' ') %>  </li>
		    </div>
			
		    <div class="span4">
			<button class="btn primary small">New</button>
			<button class="btn primary small">Edit</button>
			<button class="btn danger small">Delete</button>
		    </div>
		  </div>
		
	</ul>

	<% if !@card.nil? %>	
		<div class="Whiteboard">
			<% @cards.each do |card| %>
				<%= render_card_tree(card, 0) %>
			<% end %>
		</div>
	<% end %>
</div>