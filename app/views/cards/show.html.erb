<div class="container">
	<ul class="breadcrumb page-head">
		<div class="row show-grid" >
		    <div class="span14  parent-list">	
			<div class="parent-list-inner">
			<%= parent_card_list(@card)%>
			</div>
		    </div>
			
		    <div class="span3">
			<button class="btn primary small new ">New</button>
			<button class="btn primary small edit">Edit</button>
			<button class="btn danger small delete">Delete</button>
			<button class="btn primary small submit">Submit</button>
			
		    </div>
		    <div class="span2">
			<div class="spinner">
			</div>
		    </div>
		  </div>
		
	</ul>

	<% if !@card.nil? %>	
		<div class="Whiteboard">
			<% @cards.each do |card| %>
				<%= render_card_tree(card, 0) %>
			<% end %>
	<% end %>
</div>