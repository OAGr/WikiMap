<div class="span3 single">
	<div class="card-outline">
		<div class="header">
			<div class="header-inside">
				<%= link_to card.name, card_path(card), :class => "title" %>
				<div class="links">
					<%= link_to 'E', edit_card_path(card) %>
					<%= link_to 'D', card, confirm: 'Are you sure?', method: :delete, :remote => true %>
					<%= link_to 'N', new_card_path( :parent_id => card.id ), :remote => true %>
				</div>
			</div>
		</div>
		<div class="description">
			<%= card.description %>
		</div>		
	</div>
</div>